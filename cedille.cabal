                       array >=0.5 && <0.6,
                       text >=1.2 && <1.3,
                       ghc-prim >=0.5 && <0.6,
                       ieee754 >=0.8 && <0.9,
                       filepath >=1.4 && <1.5,
                       time >=1.8 && <1.9,
                       directory >=1.3 && <1.4,
                       deepseq >=1.4 && <1.5,
                       template-haskell >=2.13 && <2.15

